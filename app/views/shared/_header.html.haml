= image_tag 'logo.png', size: '272x48', alt: 'Baseball CMS'
- if current_member
  %ul.account-menu
    = menu_link_to current_member.name + 'さん', account_path(current_member)
    |
    = menu_link_to 'ログアウト', :session, method: :delete, data: { confirm: 'ログアウトしますか？' }

- if controller.kind_of?(Admin::Base)
  = render "shared/admin_menubar"
- else
  = render "shared/menubar"
